<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.999-ea"
            fx:controller="io.pburakov.gol.Controller">
  <center>
    <TilePane fx:id="tilePane" style="-fx-background-color: silver"/>
  </center>
  <bottom>
    <ToolBar>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <Button onAction="#onReset" text="Reset"/>
      <Button fx:id="randomizeButton" onAction="#onRandomize" text="Randomize"/>
      <Separator/>
      <Button fx:id="playButton" onAction="#onPlay" text="Play"/>
      <Button fx:id="pauseButton" onAction="#onPause" text="Pause"/>
      <Button onAction="#onStep" text="Step"/>
      <Separator/>
      <fx:define>
        <ToggleGroup fx:id="automatonSelector"/>
      </fx:define>
      <Text text="Automaton:"/>
      <RadioButton text="Game of Life" toggleGroup="$automatonSelector" onAction="#gofSelected"
                   fx:id="gofButton"/>
      <RadioButton text="Seeds" toggleGroup="$automatonSelector" onAction="#seedsSelected"
                   fx:id="seedsButton"/>
      <RadioButton text="Inkspot" toggleGroup="$automatonSelector" onAction="#inkspotSelected"
                   fx:id="inkspotButton"/>
      <Separator/>
      <Button onAction="#onExit" text="Exit"/>
    </ToolBar>
  </bottom>
</BorderPane>
